<%= form_with(model: specific, local: true) do |form| %>
  <% if specific.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(specific.errors.count, "error") %> prohibited this specific from being saved:</h2>

      <ul>
      <% specific.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :specific_name %>
  </div>

  <div class="field">
    <%= form.label :image_specific %>
    <%= form.file_field :image_specific %>
  </div>

  <div class="field">
    <%= "Subcategory:" %>
    <% @subcat_collections = Subcategory.all.sort_by &:name %>
    <%= form.collection_select(:subcategory_id, @subcat_collections, :id, :name, { :prompt => 'Select a Subcategory:', :selected => @specific.subcategory_id },  {:style => "width:200px"}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
