<div class="Clothin">

      <div class="clothing_categ">

        <div class="CategCloth">
          <% Subcategory.where(:name => "Men").each do |men| %>
          <% @clothing_men = Specific.find_by_subcategory_id(men) %>
          <div class="name"><%=link_to men.name, men, class:'hoverspec' %></div> <!--Display MEN -->
        <% end %>
        </div>

      <div class="allspec">
        <% Specific.where(:subcategory_id => "32").each do |men| %>
              <div class="specifics_cloth"><%= link_to men.name, men, class:'hoverspec' %></div>
        <% end %>
      </div>

      </div>

      <div class="clothing_categ">

        <div class="CategCloth">
          <% Subcategory.where(:name => "Women").each do |women| %>
          <% @clothing_women = Specific.find_by_subcategory_id(women) %>
          <div class="name"><%= link_to women.name, women, class:'hoverspec' %></div>
          <% end %>
        </div>

      <div class="allspec">
        <% Specific.where(:subcategory_id => "33").each do |women| %>
              <div class="specifics_cloth"><%= link_to women.name, women, class:'hoverspec' %></div>
        <% end %>
      </div>

      </div>

</div>
