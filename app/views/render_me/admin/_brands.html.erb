<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid;
    text-align: center;
    padding: 8px;
}

tr:nth-child(odd) {
    background-color: #dddddd;
}
</style>


<b><h1>Brands Admin</h1>
<%= link_to 'Add New Brand', new_brand_path %><br><br></b>

<table style="width:50%;border: 2px solid">
  <tbody>
    <% @brands_admin.each do |brand| %>
      <tr>
        <td><%= link_to brand.name, brand %></td>
        <td><%= image_tag brand.image_brand.url(:thumb) %></td>
        <td style="font-style:italic"><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td style="font-style:italic"><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
