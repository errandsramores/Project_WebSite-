<%= form_with(model: subcategory, local: true) do |form| %>
  <% if subcategory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h2>

      <ul>
      <% subcategory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :subcategory_name %>
  </div>
  <div class="field">
    <%= "Image:" %>
    <%= form.file_field :image_subcategory %>
  </div>
  <div class="field">
    <%= "Category:" %>
    <% @categ_collections = Category.all.sort_by &:name %>
    <%= form.collection_select(:category_id, @categ_collections, :id, :name, { :prompt => 'Select a Category:', :selected => @subcategory.category_id }, {:style => "width:200px"}) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
