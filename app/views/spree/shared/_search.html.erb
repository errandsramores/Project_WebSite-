  <div class="form-group">
  <%= search_field_tag :keywords, params[:keywords], placeholder: Spree.t(:search), class: "form-control" %>
<%= submit_tag Spree.t(:search), name: nil, class: "btn btn-success", id: "btn-id" %>
  </div>
