<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>
<%= form_tag spree.products_path, method: :get, class: "navbar-form" do %>
  <div class="form-group">
  <%= search_field_tag :keywords, params[:keywords], placeholder: Spree.t(:search), class: "form-control" %>
  <%= submit_tag Spree.t(:search), name: nil, class: "glyphicon glyphicon-shopping-cart", id: "btn-id" %>
  </div>
  <!-- <%= link_to_cart %> -->
  <a class="cart-info empty" href="/cart"><span class="glyphicon glyphicon-shopping-cart"></span></a>
  <script>Spree.fetch_cart()</script>
<% end %>
